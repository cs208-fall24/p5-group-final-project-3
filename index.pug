.comment-section
  h3 First 5 Comments:
  button(onclick='viewFirstFive()') View First Five Comments
  #comments-list
    // Comments will be dynamically added here
script.
  // JavaScript logic to display the first five comments
  document.addEventListener("DOMContentLoaded", function () {
  const commentsList = document.getElementById("comments-list");
  const allComments = JSON.parse(localStorage.getItem("comments")) || []; // Retrieve comments from localStorage
  // Get the first five comments
  const firstFiveComments = allComments.slice(0, 5);
  // Clear any existing content in the comments list
  commentsList.innerHTML = "";
  // Render each comment
  firstFiveComments.forEach(function (comment) {
  let commentElement = document.createElement("div");
  commentElement.classList.add("comment");
  commentElement.innerHTML = `<p>${comment.text}</p>`;
  commentsList.appendChild(commentElement);
  });
  });
